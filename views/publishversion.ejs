<div class="wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <h3>Publish new version</h3>
        <form class="form-horizontal" role="form" method="post">
          <div class="form-group row">
            <label class="col-2 col-form-label">Version</label>
            <div class="col-md-10">
              <input class="form-control" type="text" name="version" value="<%= info.version || '' %>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-2 col-form-label">Update Describ</label>
            <div class="col-md-10">
              <textarea class="form-control" rows="5" rows="5" name="describ"><%= info.describ || '' %></textarea>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-2 col-form-label">Update Status</label>
            <div class="col-md-10">
              <input class="form-control" type="number" name="status" value="<%= info.status || '' %>">
              <span class="help-block"><small>1: no upgrade, 2: upgrade not compulsively, 3: upgrade compulsively</small></span>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-2 col-form-label">Download Link</label>
            <div class="col-md-10">
              <input class="form-control" type="text" name="link" value="<%= info.link || '' %>">
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="col-md-6">
        <h3>Current Version</h3>
        <p>Version: <%= info.version || "" %></p>
        <pre style="background-color: #323b44; font-size: 0.95rem; color: #98a6ad;">Update Describ: 
<%= info.describ || "" %>
        </pre>
        <p>Update Status: <%= info.status || "" %></p>
        <p>Download Link: <%= info.link || "" %></p>
      </div>
    </div>
  </div>
</div>
