<div class="wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <h3>Publish new version</h3>
        <form class="form-horizontal" role="form" method="post">
          <div class="form-group row">
            <label class="col-2 col-form-label">Version</label>
            <div class="col-md-10">
              <input class="form-control" type="text" name="version" value="<%= info.version || '' %>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-2 col-form-label">Update Describ</label>
            <div class="col-md-10">
              <textarea class="form-control" rows="5" rows="5" name="describ"><%= info.describ || '' %></textarea>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-2 col-form-label">Update Status</label>
            <div class="col-md-10">
              <input class="form-control" type="number" name="status" value="<%= info.status || '' %>">
              <span class="help-block"><small>1: no upgrade, 2: upgrade not compulsively, 3: upgrade compulsively</small></span>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-2 col-form-label">Download Link</label>
            <div class="col-md-10">
              <input class="form-control" type="text" name="link" value="<%= info.link || '' %>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-2 col-form-label">Platform</label>
            <select name="platform">
              <option value="android">Android</option>
              <option value="ios">iOS</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="col-md-6">
        <% if (info.android) { %>
        <h3>Current Version <small>Android Platform</small></h3>
        <p>Version: <%= info.android.version || "" %></p>
        <pre style="background-color: #323b44; font-size: 0.95rem; color: #98a6ad;">Update Describ: 
<%= info.android.describ || "" %>
        </pre>
        <p>Update Status: <%= info.android.status || "" %></p>
        <p>Download Link: <%= info.android.link || "" %></p>
        <hr>
        <% } %>
        <% if (info.ios) { %>
        <h3>Current Version <small>iOS Platform</small></h3>
        <p>Version: <%= info.ios.version || "" %></p>
        <pre style="background-color: #323b44; font-size: 0.95rem; color: #98a6ad;">Update Describ: 
<%= info.ios.describ || "" %>
        </pre>
        <p>Update Status: <%= info.ios.status || "" %></p>
        <p>Download Link: <%= info.ios.link || "" %></p>
        <% } %>
      </div>
    </div>
  </div>
</div>
