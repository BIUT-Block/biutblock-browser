<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="A fully featured admin theme which can be
      used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">
    <title>SEC Mobile Wallet</title>
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet"
      type="text/css" />
    <link href="/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="/assets/css/style.css" rel="stylesheet" type="text/css" />
    <link href="/css/public.css" rel="stylesheet" type="text/css" />
    <style>
      .logo {
        position: absolute;
        top: 20%;
        display: inline-block;
        width: 100%;
        text-align: center;
        font-family: Helvetica, Arial, sans-serif;
        color: white;
      }
      .logo img {
        width: 20%;
        margin-bottom: 30px;
      }
      .button-block {
        position: absolute;
        bottom: 18%;
        left: 15%;
        width: 70%;
      }
      .button-block a {
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .button-block a:last-child {
        margin-bottom: 0;
      }
      .button-block a .fa {
        margin-right: 6px;
      }
      .cloud-img {
        position: absolute;
        top: 50%;
        left: 20%;
        width: 50%;
        bottom: 0;
        opacity: 0.8;
      }
      .bottom-img {
        position: absolute;
        width: 100%;
        bottom: 0;
      }
      .mask {height: 100vh;position: fixed;top: 0;left: 0;bottom:0;right:0;background-color: rgba(14,14,17,.8);
      text-align: right;z-index: 9;}
      .mask img {width: 70%;}
      .disabledUrl {pointer-events: none;}
      </style>
  </head>
  <body>
    <div class="logo">
      <img src="/images/logo-mobile.png">
      <h2>SEC Wallet</h2>
      <p><small>Version 1.0.0</small></p>
    </div>
    <div class="button-block">
      <a class="btn btn-block btn-large btn-success btn-rounded w-md
        waves-effect waves-light m-b-5"
        href="itms-services://?action=download-manifest&url=https://www.secblock.io/download.plist"><i
          class="fa fa-apple"></i> Download iPhone Wallet APP</a>
      <a class="btn btn-block btn-primary btn-rounded w-md waves-effect
        waves-light m-b-5" href="https://www.secblock.io/android-wallet.apk"><i
          class="fa fa-android"></i> Download Android Wallet APP</a>
    </div>
    <img class="cloud-img" src="/images/cloud-mobile.png">
    <img class="bottom-img" src="/images/img-mobile.png">
    <div class="mask" id="mask">
      <img src="/images/arrow.png">
    </div>
  </body>
  <script>
    window.onload = function (){
		var browser = {
			versions: function () {
				var u = navigator.userAgent, app = navigator.appVersion;
				return {         //移动终端浏览器版本信息
					trident: u.indexOf('Trident') > -1, //IE内核
					presto: u.indexOf('Presto') > -1, //opera内核
					webKit: u.indexOf('AppleWebKit') > -1, //苹果、谷歌内核
					gecko: u.indexOf('Gecko') > -1 && u.indexOf('KHTML') == -1, //火狐内核
					mobile: !!u.match(/AppleWebKit.*Mobile.*/), //是否为移动终端
					ios: !!u.match(/\(i[^;]+;( U;)? CPU.+Mac OS X/), //ios终端
					android: u.indexOf('Android') > -1 || u.indexOf('Linux') > -1 || u.indexOf('Adr') > -1, //android终端或uc浏览器
					iPhone: u.indexOf('iPhone') > -1, //是否为iPhone或者QQHD浏览器
					iPad: u.indexOf('iPad') > -1, //是否iPad
					webApp: u.indexOf('Safari') == -1 //是否web应该程序，没有头部与底部
				};
			}(),
			language: (navigator.browserLanguage || navigator.language).toLowerCase()
		}
		if (browser.versions.mobile) {//判断是否是移动设备打开。browser代码在下面
				var ua = navigator.userAgent.toLowerCase();//获取判断用的对象			
				if (ua.match(/MicroMessenger/i) == "micromessenger") {
					//在微信中打开
					document.getElementById("mask").style.display="block";
					//alert("微信打开")
					return true
				} else if (ua.match(/WeiBo/i) == "weibo") {
						//在新浪微博客户端打开
					document.getElementById("mask").style.display="block";
					//alert("微博打开")
					return true
				} else if (/MQQBrowser/i.test(navigator.userAgent) && /QQ/i.test(navigator.userAgent.split("MQQBrowser"))) {
						//在QQ空间打开
					document.getElementById("mask").style.display="block";
					//alert("qq打开")
					return true
				} 
				
				if (browser.versions.ios) {
						//是否在IOS浏览器打开
					document.getElementById("downloadAndroid").className = " disabledUrl";
					//alert("ios手机打开")
					return true
				} else if(browser.versions.android){
						//是否在安卓浏览器打开
					document.getElementById("downloadIPhone").className = " disabledUrl";
					//alert("安卓手机打开")
					return true
				}
      } else {
          //否则就是PC浏览器打开
        document.getElementById("mask").style.display="none";
      }
    }
    </script>
</html>
